{% extends 'base.html.twig' %}

{% block title %}
	{{ 'competition.edit_title'|trans }}
{% endblock %}

{% block body %}
	<div class="min-h-screen w-screen bg-[#9ECFC2]">
		<div class="min-h-screen w-screen bg-black/10 flex items-center justify-center">
			<div class="w-full max-w-6xl px-6 py-10">

				<div class="mb-8 flex flex-col gap-2 sm:flex-row sm:items-end sm:justify-between">
					<div>
						<h1 class="text-3xl font-bold text-slate-900">{{ 'competition.edit_heading'|trans }}</h1>
						<p class="mt-1 text-sm text-slate-700/80">
							{{ 'competition.edit_subheading'|trans }}
						</p>
					</div>

					<div class="flex items-center gap-2">
						<span class="inline-flex items-center rounded-full bg-white/70 px-3 py-1 text-xs font-semibold text-slate-700 ring-1 ring-black/5">
							ID:
							{{ competition.id }}
						</span>
						<span class="inline-flex items-center rounded-full bg-emerald-600/15 px-3 py-1 text-xs font-semibold text-emerald-800 ring-1 ring-emerald-600/20">
							{{ 'competition.organizer'|trans }}
						</span>
					</div>
				</div>

				{% if is_granted('ROLE_ORGANISATEUR') %}

					{% for label, messages in app.flashes %}
						{% for message in messages %}
							<div class="alert alert-{{ label == 'danger' ? 'danger' : 'success' }} p-4 mb-4 rounded border shadow-sm">
								<strong>{{ label == 'danger' ? 'flash.error'|trans : 'flash.success'|trans }}</strong>
								{{ message }}
							</div>
						{% endfor %}
					{% endfor %}

					<form method="post" action="{{ path('app_competition_enregistrerModif', { id: competition.id }) }}" class="grid grid-cols-1 gap-6">

						<section class="rounded-2xl bg-white/90 p-6 shadow-lg ring-1 ring-black/5 backdrop-blur">
							<div class="flex items-start justify-between gap-4">
								<div>
									<h2 class="text-lg font-semibold text-slate-900">{{ 'competition.details'|trans }}</h2>
								</div>

								<div class="grid h-10 w-10 place-items-center rounded-2xl bg-emerald-600/15 text-emerald-800 ring-1 ring-emerald-600/20">
									âœŽ
								</div>
							</div>

							<div class="mt-6 grid grid-cols-1 gap-5">
								<div class="group">
									<label class="text-xs font-semibold tracking-wide text-slate-700">{{ 'competition.name'|trans }}</label>
									<input type="text" name="nom" value="{{ competition.nom }}" required class="mt-2 w-full rounded-xl border border-slate-200 bg-white px-4 py-3 text-sm text-slate-900 shadow-sm outline-none
																				                       focus:border-emerald-600 focus:ring-4 focus:ring-emerald-600/15" placeholder="{{ 'competition.name_placeholder'|trans }}"/>
								</div>

								<div class="group">
									<label class="text-xs font-semibold tracking-wide text-slate-700">{{ 'competition.description'|trans }}</label>
									<textarea name="description" rows="4" required class="mt-2 w-full resize-none rounded-xl border border-slate-200 bg-white px-4 py-3 text-sm text-slate-900 shadow-sm outline-none
																				                       focus:border-emerald-600 focus:ring-4 focus:ring-emerald-600/15" placeholder="{{ 'competition.description_placeholder'|trans }}">{{ competition.description }}</textarea>
								</div>

								<div class="grid grid-cols-1 gap-5 md:grid-cols-2">
									<div class="md:col-span-1">
										<label class="text-xs font-semibold tracking-wide text-slate-700">{{ 'competition.location'|trans }}</label>
										<input type="text" name="lieu" value="{{ competition.lieu }}" required class="mt-2 w-full rounded-xl border border-slate-200 bg-white px-4 py-3 text-sm text-slate-900 shadow-sm outline-none
																						                         focus:border-emerald-600 focus:ring-4 focus:ring-emerald-600/15" placeholder="{{ 'competition.location_placeholder'|trans }}"/>
									</div>

									<div class="md:col-span-1">
										<label class="text-xs font-semibold tracking-wide text-slate-700">{{ 'competition.nb_terrains'|trans }}</label>
										<input type="number" name="nbTerrains" min="1" value="{{ competition.nbTerrain }}" required class="mt-2 w-full rounded-xl border border-slate-200 bg-white px-4 py-3 text-sm text-slate-900 shadow-sm outline-none
																					                         focus:border-emerald-600 focus:ring-4 focus:ring-emerald-600/15"/>
									</div>

								</div>

								<div class="grid grid-cols-1 gap-5 md:grid-cols-2">
									<div class="md:col-span-1">
										<label class="text-xs font-semibold tracking-wide text-slate-700">{{ 'competition.start_date'|trans }}</label>
										<input type="date" name="dateDebut" value="{{ competition.dateDebut ? competition.dateDebut|date('Y-m-d') : '' }}" required class="mt-2 w-full rounded-xl border border-slate-200 bg-white px-4 py-3 text-sm text-slate-900 shadow-sm outline-none
																				                         focus:border-emerald-600 focus:ring-4 focus:ring-emerald-600/15"/>
									</div>

									<div class="md:col-span-1">
										<label class="text-xs font-semibold tracking-wide text-slate-700">{{ 'competition.end_date'|trans }}</label>
										<input type="date" name="dateFin" value="{{ competition.dateFin ? competition.dateFin|date('Y-m-d') : '' }}" required class="mt-2 w-full rounded-xl border border-slate-200 bg-white px-4 py-3 text-sm text-slate-900 shadow-sm outline-none
																				                         focus:border-emerald-600 focus:ring-4 focus:ring-emerald-600/15"/>
									</div>
								</div>

							</div>

							<div class="mt-6 flex flex-col gap-3 sm:flex-row sm:items-center sm:justify-between">
								<a href="{{ path('app_competition', { id: competition.id }) }}" class="inline-flex items-center justify-center rounded-xl bg-slate-100 px-4 py-3 text-sm font-semibold text-slate-700 hover:bg-slate-200">
									{{ 'button.back'|trans }}
								</a>

								<button type="submit" class="inline-flex items-center justify-center rounded-xl bg-emerald-600 px-6 py-3 text-sm font-semibold text-white
																				                     hover:bg-emerald-700 focus:outline-none focus:ring-4 focus:ring-white/40">
									{{ 'button.save_changes'|trans }}
								</button>
							</div>
						</section>

					</form>

				{% else %}
					<div class="rounded-2xl bg-white/80 p-8 text-center shadow-lg ring-1 ring-black/5 backdrop-blur">
						<p class="text-lg font-semibold text-slate-900">{{ 'competition.access_denied'|trans }}</p>
						<p class="mt-2 text-sm text-slate-600">{{ 'competition.organizer_only'|trans }}</p>
					</div>
				{% endif %}

			</div>
		</div>
	</div>
{% endblock %}
