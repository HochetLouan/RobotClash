{% extends 'base.html.twig' %}

{% block title %}{{ 'live_matches.title'|trans }}{% endblock %}

{% block body %}
<meta http-equiv="refresh" content="30">
<div class="min-h-screen w-screen bg-cover bg-center bg-no-repeat bg-fixed"
     style="background-image: url('{{ asset('images/ModifDesScores.svg') }}');">

  <div class="min-h-screen w-screen bg-black/60 backdrop-blur-sm overflow-y-auto">
    <div class="mx-auto max-w-7xl px-6 py-12">

      <div class="mb-12 text-center">
        <h1 class="text-4xl font-extrabold text-white tracking-tight sm:text-5xl drop-shadow-lg">
          {{ 'live_matches.heading'|trans }}
        </h1>
        <p class="mt-2 text-lg text-slate-300">{{ 'live_matches.subheading'|trans }}</p>
      </div>

      {% if matchsEnCours is not empty %}
        <div class="mb-12">
            <div class="flex items-center gap-4 mb-4">
                <span class="relative flex h-3 w-3">
                  <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-emerald-400 opacity-75"></span>
                  <span class="relative inline-flex rounded-full h-3 w-3 bg-emerald-500"></span>
                </span>
                <h2 class="text-2xl font-bold text-white uppercase tracking-wider">{{ 'live_matches.current'|trans }}</h2>
            </div>

            <div class="grid gap-6">
                {% for match in matchsEnCours %}
                    <div class="relative overflow-hidden rounded-3xl bg-white shadow-2xl ring-4 ring-emerald-500/50 transform transition hover:scale-[1.01]">
                        <div class="absolute top-0 left-1/2 -translate-x-1/2 bg-emerald-600 px-6 py-1 rounded-b-xl shadow-lg z-10">
                            <span class="text-sm font-bold text-white tracking-widest animate-pulse">{{ 'live_matches.live_label'|trans }}</span>
                        </div>

                        <div class="flex flex-col md:flex-row items-center justify-between p-8 sm:p-12 gap-8">
                            <div class="flex-1 flex flex-col items-center gap-4 text-center">
                                <img class="h-24 w-24 sm:h-32 sm:w-32 rounded-full bg-slate-100 ring-4 ring-slate-200 p-2 shadow-inner"
                                     src="https://api.dicebear.com/9.x/avataaars-neutral/svg?seed={{ match.equipeA }}"
                                     alt="{{ match.equipeA }}"/>
                                <div class="text-2xl sm:text-4xl font-black text-slate-800 break-words w-full">
                                    {{ match.equipeA }}
                                </div>
                            </div>

                            <div class="flex items-center gap-6 bg-slate-900 rounded-2xl px-8 py-4 shadow-inner">
                                <span class="text-5xl sm:text-7xl font-mono font-bold text-white">{{ match.scoreA }}</span>
                                <span class="h-1 w-8 bg-slate-500 rounded-full"></span>
                                <span class="text-5xl sm:text-7xl font-mono font-bold text-white">{{ match.scoreB }}</span>
                            </div>

                            <div class="flex-1 flex flex-col items-center gap-4 text-center">
                                <img class="h-24 w-24 sm:h-32 sm:w-32 rounded-full bg-slate-100 ring-4 ring-slate-200 p-2 shadow-inner"
                                     src="https://api.dicebear.com/9.x/avataaars-neutral/svg?seed={{ match.equipeB }}"
                                     alt="{{ match.equipeB }}"/>
                                <div class="text-2xl sm:text-4xl font-black text-slate-800 break-words w-full">
                                    {{ match.equipeB }}
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
      {% endif %}

      <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">

        <div class="bg-white/10 backdrop-blur-md rounded-3xl p-6 border border-white/10">
            <h3 class="text-xl font-bold text-white mb-6 border-b border-white/10 pb-2">{{ 'live_matches.last_results'|trans }}</h3>
            
            {% if matchsPasses is empty %}
                <div class="text-slate-400 italic text-center py-4">{{ 'live_matches.no_recent'|trans }}</div>
            {% else %}
                <div class="space-y-4">
                    {% for match in matchsPasses %}
                        <div class="bg-white/90 rounded-xl p-4 flex items-center justify-between shadow-lg opacity-90">
                            <div class="flex items-center gap-3 w-1/3">
                                <img class="h-10 w-10 rounded-full bg-slate-100 p-1" src="https://api.dicebear.com/9.x/avataaars-neutral/svg?seed={{ match.equipeA }}" alt="">
                                <span class="font-bold text-slate-800 truncate">{{ match.equipeA }}</span>
                            </div>
                            
                            <div class="bg-slate-800 text-white px-3 py-1 rounded-lg font-mono font-bold text-lg whitespace-nowrap">
                                {{ match.scoreA }} - {{ match.scoreB }}
                            </div>

                            <div class="flex items-center justify-end gap-3 w-1/3">
                                <span class="font-bold text-slate-800 truncate text-right">{{ match.equipeB }}</span>
                                <img class="h-10 w-10 rounded-full bg-slate-100 p-1" src="https://api.dicebear.com/9.x/avataaars-neutral/svg?seed={{ match.equipeB }}" alt="">
                            </div>
                        </div>
                    {% endfor %}
                </div>
            {% endif %}
        </div>

        <div class="bg-white/10 backdrop-blur-md rounded-3xl p-6 border border-white/10">
            <h3 class="text-xl font-bold text-white mb-6 border-b border-white/10 pb-2">{{ 'live_matches.upcoming'|trans }}</h3>

            {% if matchsFuturs is empty %}
                <div class="text-slate-400 italic text-center py-4">{{ 'live_matches.no_upcoming'|trans }}</div>
            {% else %}
                <div class="space-y-4">
                    {% for match in matchsFuturs %}
                        <div class="bg-white/50 rounded-xl p-4 flex items-center justify-between shadow-lg border border-white/20">
                             <div class="flex items-center gap-3 w-1/3">
                                <img class="h-10 w-10 rounded-full bg-white/80 p-1" src="https://api.dicebear.com/9.x/avataaars-neutral/svg?seed={{ match.equipeA }}" alt="">
                                <span class="font-semibold text-slate-900 truncate">{{ match.equipeA }}</span>
                            </div>

                            <div class="bg-blue-600 text-white px-4 py-1 rounded-full font-bold text-sm shadow flex items-center gap-1">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                                </svg>
                                {{ match.horaire|date('H:i') }}
                            </div>

                             <div class="flex items-center justify-end gap-3 w-1/3">
                                <span class="font-semibold text-slate-900 truncate text-right">{{ match.equipeB }}</span>
                                <img class="h-10 w-10 rounded-full bg-white/80 p-1" src="https://api.dicebear.com/9.x/avataaars-neutral/svg?seed={{ match.equipeB }}" alt="">
                            </div>
                        </div>
                    {% endfor %}
                </div>
            {% endif %}
        </div>

      </div>

    </div>
  </div>
</div>
{% endblock %}
